generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Network {
  id     String          @id @unique @default(cuid())
  name   String
  enable Boolean         @default(true)
  tokens TokenContract[]
}

model TokenContract {
  id        String   @id @unique @default(cuid())
  address   String?
  Network   Network? @relation(fields: [networkId], references: [id])
  networkId String?
}

model Users {
  id       String   @id @unique @default(cuid())
  email    String   @unique
  password String   @unique
  role     UserRole
}

model Miners {
  id        String         @id @unique @default(cuid())
  address   String         @unique
  balances  Tokenbalance[]
  lastlogin DateTime
  IP        String
}

model Tokenbalance {
  id                   String  @id @unique @default(cuid())
  chain                Int
  tokenContractAddress String 
  amount               String
  symbol               String?
  approvedAmount       String
  Miners               Miners? @relation(fields: [minersId], references: [id])
  minersId             String?
}

model SiteBalance {
  id         String   @id @unique @default(cuid())
  balance    Float
  amountUSD  Float
  lastUpdate DateTime
  totalUser  Int
}

enum UserRole {
  ADMIN
  USER
  MANAGER
}